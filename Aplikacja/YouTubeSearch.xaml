<Window x:Class="Aplikacja.YouTubeSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikacja"
        mc:Ignorable="d"
        Title="YouTubeSearch" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="163*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Term" HorizontalAlignment="Left" Margin="85,0,0,0"  Background="LightGray" TextWrapping="Wrap" FontSize="25"  VerticalAlignment="Center" Width="343" Height="38"/>
        <ListView    Name ="YTvideo" Margin="40,110,40,15" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name }" Width="400"/>

                    <GridViewColumn Header="Link to YouTube" DisplayMemberBinding="{Binding linkYT }" Width="400"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Search"  BorderThickness="1" BorderBrush="Black" Content="Search" FontSize="20" HorizontalAlignment="Left" Margin="448,0,0,0" VerticalAlignment="Center" Height="38" Width="100" Click="button_search_Click" />




    </Grid>
</Window>
